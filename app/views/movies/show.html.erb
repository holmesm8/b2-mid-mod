<%= @movie.name %>
<%= @movie.creation_year %>
<%= @movie.genre %>
<% @movie.sort_actors_by_age.each do |actor| %>
  <%= actor.name %>
<% end %>
<p>Average Age: <%= "#{@movie.average_actor_age.round}" %></p>
<%= form_tag("/actormovies/#{@movie.id}") do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag "Add Actor" %>
<% end %>
